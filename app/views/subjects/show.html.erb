	<%= link_to("back to list",{:action=>'index'},:class=> 'back-lin')%>

	

	<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
	<table class="table" summary="Subject list">
	<tr class="header">
		<th></th>
		<th>Subject</th>
		<th>Visible</th>
		<th>Pages</th>
		<th>Action</th>
	</tr>
	
	<tr>
		<td>
		<%= @subject.position %>	
		</td>

				<td>
			<%=@subject.name%>
		</td>


		<td class="center">
		<%=@subject.visible ? "Yes": "No"%>
			
		</td>

		<td class="center">
		<%= @subject.pages.count %>
			
		</td>

		<td class="actions">
			
			<%= link_to("Show","#",:class => 'action show')%>
			<%= link_to("Edit",{:action =>'edit',:id=>@subject.id},:class =>'action edit')%>

		</td>



	</tr>

	</table>