<div class="subjects index">
	
	<h2>Subjects</h2>
	<%= link_to("Add New Subject",{:action=> "new"},:class => 'action new')%>
	<table class="table" summary="Subject list">


	<% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
	<tr class="header">
		<th></th>
		<th>Subject</th>
		<th>Visible</th>
		<th>Pages</th>
		<th>Action</th>
	</tr>
	<% @subjects.each do |subject| %>
	<tr>
		<td>
		<%= subject.position %>	
		</td>

				<td>
			<%=subject.name%>
		</td>


		<td class="center">
		<%=subject.visible ? "Yes": "No"%>
			
		</td>

		<td class="center">
		<%= subject.pages.count %>
			
		</td>

		<td class="actions">
			
			<%= link_to("Show","#",:class => 'action show')%>
			<%= link_to("Edit",{:action =>'edit',:id=>subject.id},:class =>'action edit')%>
			<%= link_to("Delete",{:action =>'delete',:id=>subject.id},:class =>'action edit')%>

		</td>



	</tr>
		<%end%>

	</table>
</div>