<% link_to("back to list",{:action=>'index'},:class=> 'back-lin')%>
<div class="subjects new">
	<h2>Create Subject</h2>
	
<%= form_for(:subject, :url => {
	:action =>'create'
	})  do |t| %>
	<table>
		<tr>
			<th>Name</th>
			<td><%=t.text_field(:name) %></td>
		</tr>
		<tr>
			<th>
				Position

			</th>
			<td><%= t.text_field(:position)%></td>
		</tr>
		<tr>
		<th>
			Visible
		</th>
			<td>
				<%= t.text_field(:visible)%>

			</td>

		</tr>	

	</table>
	<div class="form-button">
	<%= submit_tag("Create Subject")%>
		
	</div>
	<%end%>


</div>